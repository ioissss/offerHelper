<!-- 公司信息 -->
<view class="card">
 
<view class="CompanyInfo">
  <text style="margin-left: 20rpx;font-weight: 750;font-size: 40rpx;">{{data.company}}</text>
  <view style="display: flex;flex-direction: row; align-items: center;margin-left: 300rpx;">
    <van-icon size="50rpx" name="https://gitee.com/xing-xi-zhang/111/raw/master/%E5%85%B6%E4%BB%96%E4%BA%BA%E5%91%98.png" />
    <text style="font-size: 30rpx;color: #5f5d5d;">1w+</text>
  </view>
</view>

<view class="dashed-line" style="position: relative; left: 17rpx; top: -16rpx"></view>

<!-- 标签 -->
<view style="margin-left: 20rpx;">
<block>
  <van-tag size="medium" color="#f2826a">互联网</van-tag>
</block>
  <van-tag style="margin-left: 50rpx;" size="medium" color="#a4c9d1">私企</van-tag>
  <van-tag style="margin-left: 50rpx;" size="medium" color="#a4c9d1">城市</van-tag>
</view>

<view style="margin-left: 20rpx;display: flex;flex-direction: column;margin-top: 15rpx;">
<text style="font-size: 20rpx;color: rgb(133, 119, 119);">投递日期 : 2025/1/13</text>
<text selectable="true" style="font-size: 20rpx;color: rgb(133, 119, 119);margin-top: 10rpx;">投递链接 : https://gitee.com.png</text>
<text style="font-size: 20rpx;color: rgb(133, 119, 119);margin-top: 10rpx;">投递岗位 : 开发</text>
</view>

<view style=" margin-left: 35rpx;margin-top: 10rpx;width: 90%;">
<van-steps
  bind:click-step="onClickStep"
  steps="{{ steps }}"
  active="{{ active }}"
  active-color="#29f07f"
/>
</view>

</view>  


<popover id='popover'>
    <popover-item bindtap='onClickA' hasline>内容超出会自动隐藏用...表示</popover-item>
    <popover-item hasline>子菜单B</popover-item>
    <popover-item>子菜单C</popover-item>
</popover>
